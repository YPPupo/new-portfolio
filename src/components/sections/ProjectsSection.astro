---
import ProjectItem from "./../ui/ProjectItem.astro";
import mangolandImage from "../../assets/projects/mangoland.png";
import devfinderImage from "../../assets/projects/devfinder.png";
import cryptoDashboardImage from "../../assets/projects/crypto-dashboard.png";
import audioTranscriptionsImage from "../../assets/projects/audio-transcriptions.png";
import testingCalculatorImage from "../../assets/projects/testing-calculator.png";
import sortealoImage from "../../assets/projects/sortealo.png";
import piedrasVivasImage from "../../assets/projects/piedras-vivas.png";
import himnarioMHImage from "../../assets/projects/himnario-mh.png";
import FeaturedProjectItem from "../ui/FeaturedProjectItem.astro";

const projects = [
  {
    title: "Sortealo",
    description:
      "Sortealo is a comprehensive raffle management platform that serves both raffle organizers and participants. It provides organizers with powerful tools to create, manage, and track raffles, while offering participants a seamless experience to discover and enter raffles. The platform features secure payment processing, real-time draw management, and automated winner selection. Built with modern web technologies, Sortealo demonstrates my ability to create user-friendly interfaces and robust backend systems for handling transactions and user interactions in a secure and scalable manner.",
    image: sortealoImage,
    link: "https://web-sortealo.vercel.app/",
    repoLink: "",
    tags: ["React", "Next js", "API", "Supabase", "Vercel"],
    featured: false,
    isPrivated: true,
  },
  {
    title: "Mangoland",
    description:
      "This landing page was designed and developed for Mangoland, a fictional distributor of premium mangoes. The goal was to create a visually engaging and informative online presence that highlights a prominent display of vibrant mango imagery and detailed insights into locally sourced, high-quality produce. Key features include sections that introduce the brandâ€™s commitment to sustainability and quality through clear, concise information, as well as a call to action inviting visitors to explore the products and subscribe for updates. This project showcases my skills in web design, user experience (UX), and front-end development using HTML, CSS, and JavaScript for interactive elements.",
    image: mangolandImage,
    link: "https://mangoland.vercel.app/",
    repoLink: "https://github.com/YPPupo/mangoland.git",
    tags: ["Astro", "JavaScript", "Vercel"],
    featured: false,
    isPrivated: false,
  },
  {
    title: "Piedras Vivas App",
    description: "A comprehensive application designed for the Piedras Vivas Church in Cuba, centralizing their annual activities, a directory of pastors and churches, and a daily devotional. This digital solution significantly improved internal communication and community engagement.",
    image: piedrasVivasImage,
    link: "https://vimeo.com/1092270373/cc701b308b",
    repoLink: "",
    tags: ["Flutter", "Dart"],
    featured: false,
    isPrivated: true,
  },
  {
    title: "Monte Hebron Baptist Hymnal",
    description: "Mobile application developed for the Monte Hebron Baptist Church in Tapachula, which digitizes and organizes all the hymns from their traditional hymnal in an accessible format. The app provides church members with easy access to their favorite hymns anytime, anywhere, enhancing worship experiences and making the hymnal more portable and convenient than ever before.",
    image: himnarioMHImage,
    link: "https://vimeo.com/1092270296/d3f2e3ad53",
    repoLink: "",
    tags: ["React Native", "JavaScript", "Expo"],
    featured: false,
    isPrivated: true,
  },
  {
    title: "Crypto New Dashboard",
