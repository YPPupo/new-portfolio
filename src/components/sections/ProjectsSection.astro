---
import ProjectItem from "./../ProjectItem.astro";
import mangolandImage from "../../assets/mangoland.png";
import devfinderImage from "../../assets/devfinder.png";
import cryptoDashboardImage from "../../assets/crypto-dashboard.png";
const projects = [
  {
    title: "Mangoland",
    description:
      "Probablemente un proyecto relacionado con una marca o temática de 'Mangoland'. Podría ser un sitio web promocional, una aplicación o algo creativo.",
    image: mangolandImage,
    link: "https://github.com/YPPupo/mangoland.git",
    repoLink: "https://github.com/YPPupo/mangoland.git",
    tags: ["React", "JavaScript", "Vercel"],
  },
  {
    title: "FM Devfinder",
    description:
      "Este proyecto parece ser una herramienta para buscar o encontrar desarrolladores. Podría ser una aplicación web que se conecta a alguna API.",
    image: devfinderImage,
    link: "https://github.com/YPPupo/fm-devfinder.git",
    repoLink: "https://github.com/YPPupo/fm-devfinder.git",
    tags: ["HTML", "CSS", "JavaScript", "API"],
  },
  {
    title: "Crypto New Dashboard",
    description:
      "Un panel de control (dashboard) para visualizar información relacionada con criptomonedas. Probablemente muestra datos del mercado de cripto.",
    image: cryptoDashboardImage,
    link: "https://github.com/YPPupo/crypto-new-dashboard.git",
    repoLink: "https://github.com/YPPupo/crypto-new-dashboard.git",
    tags: ["React", "JavaScript", "API", "Dashboard"],
  },
];
---

<section
  id="projects"
  class="max-w-7xl mx-auto px-6 lg:px-8 xl:px-0 py-16 md:pt-20 md:pb-20"
>
  <h2
    class="text-4xl md:text-5xl font-bold text-white mb-12 md:mb-16 text-center poppins-semibold"
  >
    Projects
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 md:gap-8">
    {
      projects.map((project) => (
        <ProjectItem
          title={project.title}
          description={project.description}
          image={project.image.src}
          link={project.link}
          repoLink={project.repoLink}
          tags={project.tags}
        />
      ))
    }
  </div>
</section>

<style>
  .grid
    > div:nth-child(1)
    > div.w-full.md\:w-1\/3.flex.justify-center.items-center
    > img {
    content: url("/images/mangoland-preview.jpg");
  }
  .grid
    > div:nth-child(2)
    > div.w-full.md\:w-1\/3.flex.justify-center.items-center
    > img {
    content: url("/images/devfinder-preview.jpg");
  }
  .grid
    > div:nth-child(3)
    > div.w-full.md\:w-1\/3.flex.justify-center.items-center
    > img {
    content: url("/images/crypto-dashboard-preview.jpg");
  }
</style>
