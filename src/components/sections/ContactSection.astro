<section
  id="contact"
  class="w-full px-7 xl:px-0 py-20 flex flex-col items-center justify-center gap-7"
>
  <h2 class="text-4xl md:text-5xl font-bold text-white text-center">
    Get in Touch
  </h2>

  <form
    class="w-full max-w-[500px] flex flex-col gap-6 bg-gray-800 p-6 sm:p-8 rounded-xl border border-gray-700 shadow-md"
    action="https://formspree.io/f/mnqrvydw"
    method="POST"
  >
    <div class="flex flex-col gap-2">
      <label for="name" class="text-white poppins-regular">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        required
        class="px-4 py-3 rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500"
      />
    </div>

    <div class="flex flex-col gap-2">
      <label for="email" class="text-white poppins-regular">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        required
        class="px-4 py-3 rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500"
      />
    </div>

    <div class="flex flex-col gap-2">
      <label for="message" class="text-white poppins-regular">Message</label>
      <textarea
        name="message"
        id="message"
        rows="5"
        required
        class="px-4 py-3 rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 resize-none"
      ></textarea>
    </div>

    <button
      type="submit"
      class="self-start bg-emerald-500 text-white px-6 py-3 rounded-full font-medium hover:bg-emerald-600 transition-colors"
    >
      Send Message
    </button>
  </form>
</section>
