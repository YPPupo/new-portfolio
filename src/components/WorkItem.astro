---

interface Props {
  title: string;
  time: string;
  company: string;
  location: string;
  tasks: string[];
}
const { title, time, company, location, tasks } = Astro.props;

---

<div
  class="border border-slate-700/50 rounded-xl p-5 sm:p-6 mb-8 hover:shadow-emerald-500/10 hover:border-slate-700 transition-all duration-300 bg-gradient-to-br from-slate-800/50 via-slate-900/30 to-slate-800/50 backdrop-blur-sm shadow-md"
  >
  <div
    class="flex flex-col md:flex-row md:items-baseline justify-between gap-x-4 gap-y-2 mb-4"
    >
    <h3 class="text-lg sm:text-xl md:text-2xl text-emerald-400 font-semibold poppins-semibold flex-shrink">
      {title}
    </h3>

    <div class="flex flex-wrap gap-2 md:hidden">
       {
        time
          .split(" | ")
          .map((date: string) => (
            <span class="bg-emerald-600/80 text-emerald-50 text-xs px-3 py-1 rounded-full poppins-regular whitespace-nowrap">
              {date.trim()} </span>
          ))
      }
    </div>

    <div
      class="bg-emerald-600/80 text-emerald-50 text-xs px-3 py-1 rounded-full poppins-regular w-fit hidden md:block flex-shrink-0 whitespace-nowrap"
       >
      {time}
    </div>
  </div>

  <div
    class="flex flex-col md:flex-row md:items-baseline gap-x-3 gap-y-1 text-slate-300 mb-4 text-sm sm:text-base montserrat-regular"
    >
    <span class="font-medium text-slate-100">{company}</span> <span class="hidden md:inline text-slate-500">|</span> <span>{location}</span>
  </div>

  <ul class="list-disc list-outside ml-4 sm:ml-5 space-y-2 text-slate-300 leading-relaxed text-sm sm:text-base montserrat-regular">
    {tasks.map((task: string) => <li>{task}</li>)}
  </ul>
</div>