---
const { title, description, image, link, repoLink, tags } = Astro.props;
---

<div
  class="flex flex-col bg-gray-800/50 border border-gray-700 rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-all duration-300 p-5"
>
  <div class="w-full flex justify-center items-center mb-4">
    {
      image ? (
        <img
          src={image}
          alt={title}
          class="w-full h-auto object-cover rounded-lg hover:scale-105 transition-transform duration-300"
        />
      ) : (
        <div class="w-full h-40 bg-gray-700 flex justify-center items-center text-white">
          No Image
        </div>
      )
    }
  </div>

  <div class="flex flex-col justify-center gap-4">
    <h3 class="text-2xl text-white font-semibold">{title}</h3>
    <p class="text-slate-300 leading-relaxed">{description}</p>

    {
      tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-2">
          {tags.map((tag: string) => (
            <span class="bg-gray-700 text-slate-300 text-xs rounded-full px-2 py-1">
              {tag}
            </span>
          ))}
        </div>
      )
    }

    <div class="flex gap-2 mt-4">
      {
        link && (
          <a
            href={link}
            target="_blank"
            class="w-fit px-4 py-2 bg-emerald-500 text-white rounded-full hover:bg-emerald-600 transition-all"
          >
            View Project
          </a>
        )
      }
      {
        repoLink && (
          <a
            href={repoLink}
            target="_blank"
            class="w-fit px-4 py-2 bg-slate-700 text-white rounded-full hover:bg-slate-800 transition-all"
          >
            View Repository
          </a>
        )
      }
    </div>
  </div>
</div>
