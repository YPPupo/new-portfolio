---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  repoLink: string;
  tags: string[];
}

const { title, description, image, link, repoLink, tags } = Astro.props;
---

<article>
  <div
    class="glass-effect rounded-2xl overflow-hidden border border-slate-700/50 hover:border-emerald-500/50 transition-all duration-500 card-hover bg-gradient-to-br from-slate-800/50 to-slate-900/50"
  >
    <div class="grid lg:grid-cols-2 gap-0">
      <!-- Image -->
      <div class="relative overflow-hidden group">
        <img
          src={image}
          alt={`Captura de pantalla del proyecto ${title}`}
          class="w-full h-64 lg:h-full object-cover transition-transform duration-700 group-hover:scale-110"
          loading="lazy"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
        </div>
        <div class="absolute top-4 left-4">
          <span
            class="bg-emerald-500 text-white px-3 py-1 rounded-full text-sm font-medium"
          >
            Destacado
          </span>
        </div>
      </div>

      <!-- Content -->
      <div class="p-8 lg:p-12 flex flex-col justify-center">
        <header class="mb-6">
          <h3
            class="heading-md text-white poppins-semibold mb-4 animated-gradient-text"
          >
            {title}
          </h3>
          <p class="text-slate-300 text-lg leading-relaxed montserrat-regular">
            {description}
          </p>
        </header>

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-8">
          {
            tags.map((tag) => (
              <span class="bg-emerald-500/20 text-emerald-300 px-3 py-1 rounded-full text-sm border border-emerald-500/30">
                {tag}
              </span>
            ))
          }
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary magnetic-btn enhanced-hover ripple"
            aria-label={`Ver proyecto ${title} en vivo`}
          >
            Ver Proyecto
          </a>
          <a
            href={repoLink}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary magnetic-btn enhanced-hover"
            aria-label={`Ver código fuente de ${title}`}
          >
            Ver Código
          </a>
        </div>
      </div>
    </div>
  </div>
</article>
