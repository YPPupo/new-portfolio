---
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
import Layout from "../layouts/Layout.astro";

import HeroSection from "../components/sections/HeroSection.astro";
import AboutSection from "../components/sections/AboutSection.astro";
import ExperienceSection from "../components/sections/ExperienceSection.astro";
import ProjectsSection from "../components/sections/ProjectsSection.astro";
import SkillsSection from "../components/sections/SkillsSection.astro";
import ContactSection from "../components/sections/ContactSection.astro";
---

<Layout>
  <header class="w-full">
    <Navbar />
  </header>
  <main class="flex flex-col max-w-7xl mx-auto">
    <section id="main-content">
      <HeroSection />
      <AboutSection />
      <ExperienceSection />
      <ProjectsSection />
      <SkillsSection />
      <ContactSection />
    </section>
  </main>
  <footer class="w-full">
    <Footer />
  </footer>
</Layout>
